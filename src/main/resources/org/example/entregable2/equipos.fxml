                <Label id="lblDescripcion" fx:id="lblDescripcion" layoutX="22.0" layoutY="46.0" style="-fx-opacity: 0.85;" text="Premier League" textFill="white">
                    <font>
                        <Font name="System" size="12.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <Pane layoutX="18.0" layoutY="95.0" prefHeight="285.0" prefWidth="564.0" style="-fx-background-color: #ffffff;                    -fx-border-color: #36003b;                    -fx-border-width: 2;                    -fx-border-radius: 12;                    -fx-background-radius: 12;">

            <children>
                <TableView id="colCodigo" fx:id="tablaEquipos" layoutX="12.0" layoutY="12.0" prefHeight="210.0" prefWidth="540.0" style="-fx-background-radius: 10;                               -fx-border-radius: 10;">
