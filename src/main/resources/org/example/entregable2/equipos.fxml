                      <Button id="btnActualizar" fx:id="btnActualizar" mnemonicParsing="false" prefHeight="29.0" prefWidth="103.0" style="-fx-background-color: #36003b;                            -fx-text-fill: white;                            -fx-background-radius: 10;                            -fx-font-weight: bold;" text="Actualizar" />
