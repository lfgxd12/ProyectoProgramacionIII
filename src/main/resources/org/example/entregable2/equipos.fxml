                  <Button id="btnModificar" fx:id="btnModificar" mnemonicParsing="false" prefHeight="32.0" prefWidth="83.0" style="-fx-background-color: white;                            -fx-text-fill: #36003b;                            -fx-border-color: #36003b;                            -fx-border-width: 2;                            -fx-background-radius: 10;                            -fx-border-radius: 10;                            -fx-font-weight: bold;" text="Modificar" GridPane.columnIndex="2" />
