<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.entregable2.controllers.SimulacionController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <Label text="SimulaciÃ³n de Jornadas" style="-fx-text-fill: #36003b; -fx-font-weight: bold;">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label fx:id="lblEquiposRegistrados" text="Equipos registrados: 0" />
        <Label fx:id="lblTotalJornadas" text="Total de jornadas: 0" />
        <Label fx:id="lblJornadasJugadas" text="Jornadas jugadas: 0" />
        <Label fx:id="lblJornadasPendientes" text="Jornadas pendientes: 0" />
    </VBox>

    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Simular jornadas" style="-fx-font-weight: bold;" />
        <HBox alignment="CENTER" spacing="10">
            <Label text="Cantidad:" />
            <Spinner fx:id="spinnerCantidad" editable="true" initialValue="1" min="1" max="100" prefWidth="100" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSimularUna" text="Simular 1 Jornada"
                    onAction="#onSimularUnaClick"
                    style="-fx-background-color: #36003b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                    prefWidth="150" />
            <Button fx:id="btnSimularVarias" text="Simular Varias"
                    onAction="#onSimularVariasClick"
                    style="-fx-background-color: #36003b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                    prefWidth="150" />
        </HBox>
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnActualizar" text="Actualizar"
                onAction="#onActualizarClick"
                style="-fx-background-color: #36003b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                prefWidth="100" />
        <Button fx:id="btnVolver" text="Volver"
                onAction="#onVolverClick"
                style="-fx-background-color: #36003b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                prefWidth="100" />
    </HBox>

</VBox>

